---
import { Image } from 'astro:assets';
import client from "../../../tina/__generated__/client";
import aboutImage from '../../assets/images/about-manufacturing-facility.jpg';

const aboutData = await client.queries.about({
  relativePath: "index.json",
});

const about = aboutData.data.about;
---

<section class="px-12 py-[100px] max-w-[1440px] mx-auto max-md:px-5 max-md:py-16" id="about">
  <div class="grid grid-cols-2 gap-20 items-center max-xl:grid-cols-1 max-xl:gap-12">
    <div class="relative">
      <Image
        src={aboutImage}
        alt="Elite Glove manufacturing facility - advanced glove production equipment"
        width={800}
        height={480}
        class="w-full h-[480px] object-cover rounded-[var(--radius-lg)]"
        format="webp"
      />
      <div class="absolute -bottom-4 -left-4 w-40 h-40 bg-[var(--color-primary)] opacity-10 rounded-[var(--radius-lg)] -z-10"></div>
    </div>

    <div>
      <div class="max-w-[640px] mb-10">
        <span class="inline-block text-2xl font-bold uppercase tracking-[0.06em] text-[var(--color-primary)] mb-4">
          {about.label}
        </span>
        <h2 class="text-[24px] font-semibold tracking-[-0.01em] text-slate-900 mb-5 leading-[1.3] max-md:text-[20px]">
          {about.title}
        </h2>
      </div>

      <p class="text-base text-[var(--color-text-muted)] leading-[1.8] mb-6">
        {about.paragraph1}
      </p>

      <p class="text-base text-[var(--color-text-muted)] leading-[1.8] mb-10">
        {about.paragraph2}
      </p>

      <div class="grid grid-cols-2 gap-6 max-md:grid-cols-1">
        {about.features.map((feature) => (
          <div class="flex gap-4">
            <div class="w-12 h-12 bg-[rgba(8,145,178,0.1)] rounded-[var(--radius-md)] flex items-center justify-center flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-[var(--color-primary)]">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z" />
              </svg>
            </div>
            <div>
              <h4 class="text-[15px] font-semibold mb-1">{feature.title}</h4>
              <p class="text-[13px] text-[var(--color-text-light)]">{feature.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
