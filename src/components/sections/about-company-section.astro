---
import { Image } from 'astro:assets';
import client from "../../../tina/__generated__/client";
import aboutImage from '../../assets/images/about-manufacturing-facility.jpg';

const aboutData = await client.queries.about({
  relativePath: "index.json",
});

const about = aboutData.data.about;
---

<section class="px-12 py-[100px] max-w-[1440px] mx-auto max-md:px-5 max-md:py-16" id="about">
  <div class="grid grid-cols-2 gap-20 items-center max-xl:grid-cols-1 max-xl:gap-12">
    <div class="relative">
      <Image
        src={aboutImage}
        alt="Elite Glove manufacturing facility - advanced glove production equipment"
        width={800}
        height={480}
        class="w-full h-[480px] object-cover rounded-[var(--radius-lg)]"
        format="webp"
      />
      <div class="absolute -bottom-4 -left-4 w-40 h-40 bg-[var(--color-primary)] opacity-10 rounded-[var(--radius-lg)] -z-10"></div>
    </div>

    <div>
      <div class="max-w-[640px] mb-10">
        <span class="inline-block text-4xl font-extrabold uppercase tracking-[0.04em] text-[var(--color-primary)] mb-4">
          {about.label}
        </span>
        <h2 class="text-[24px] font-semibold tracking-[-0.01em] text-slate-900 mb-5 leading-[1.3] max-md:text-[20px]">
          {about.title}
        </h2>
      </div>

      <p class="text-base text-[var(--color-text-muted)] leading-[1.8] mb-6">
        {about.paragraph1}
      </p>

      <p class="text-base text-[var(--color-text-muted)] leading-[1.8] mb-10">
        {about.paragraph2}
      </p>

      <div class="grid grid-cols-2 gap-6 max-md:grid-cols-1">
        {about.features.map((feature, i) => {
          const iconPaths = [
            "M9.75 3.104v5.714a2.25 2.25 0 0 1-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 0 1 4.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0 1 12 15a9.065 9.065 0 0 0-6.23.693L5 14.5m14.8.8 1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0 1 12 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.61L5 14.5",
            "M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z",
            "M12.75 3.03v.568c0 .334.148.65.405.864l1.068.89c.442.369.535 1.01.216 1.49l-.51.766a2.25 2.25 0 0 1-1.161.886l-.143.048a1.107 1.107 0 0 0-.57 1.664c.369.555.169 1.307-.427 1.605L9 13.125l.423 1.059a.956.956 0 0 1-1.652.928l-.679-.906a1.125 1.125 0 0 0-1.906.172L4.5 15.75l-.612.153M12.75 3.031a9 9 0 1 0 6.712 14.972M12.75 3.031a9 9 0 0 1 6.712 14.972m0 0a.75.75 0 0 1-1.262-.81l-.094-.313a.75.75 0 0 0-.716-.517H15.5a.75.75 0 0 0-.75.75v1.5a.75.75 0 0 1-1.5 0v-2.438",
            "M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z",
          ];
          return (
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-[rgba(76,168,71,0.1)] rounded-[var(--radius-md)] flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-[var(--color-primary)]">
                  <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[i] || iconPaths[3]} />
                </svg>
              </div>
              <div>
                <h4 class="text-[15px] font-semibold mb-1">{feature.title}</h4>
                <p class="text-[13px] text-[var(--color-text-light)]">{feature.description}</p>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </div>
</section>
