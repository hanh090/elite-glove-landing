---
import client from "../../../tina/__generated__/client";
import CertCard from "../shared/cert-card-item.astro";

const certsData = await client.queries.certifications({
  relativePath: "index.json",
});

const certs = certsData.data.certifications;
---

<section class="px-12 py-[100px] max-w-[1440px] mx-auto max-md:px-5 max-md:py-16" id="certificates">
  <div class="max-w-[640px] mx-auto text-center mb-16">
    <span class="inline-block text-4xl font-extrabold uppercase tracking-[0.04em] text-[var(--color-primary)] mb-4">
      {certs.label}
    </span>
    <h2 class="text-[24px] font-semibold tracking-[-0.01em] text-slate-900 mb-5 leading-[1.3] max-md:text-[20px]">
      {certs.title}
    </h2>
    <p class="text-[17px] text-[var(--color-text-muted)] leading-[1.7]">
      Our products meet the highest global standards for safety and quality
    </p>
  </div>

  <div class="grid grid-cols-4 gap-6 max-xl:grid-cols-2 max-md:grid-cols-1">
    {certs.items.map((cert) => (
      <CertCard
        name={cert.name}
        description={cert.description}
        badgeImage={cert.badgeImage}
      />
    ))}
  </div>
</section>
