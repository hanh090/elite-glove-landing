---
import client from "../../../tina/__generated__/client";

const contactData = await client.queries.contact({
  relativePath: "index.json",
});

const contact = contactData.data.contact;
---

<section class="px-12 py-[100px] bg-[var(--color-bg-alt)] max-md:px-5 max-md:py-16" id="contact">
  <div class="max-w-[1200px] mx-auto">
    <div class="grid grid-cols-[1fr_1.5fr] gap-16 max-xl:grid-cols-1">
      <div>
        <div class="mb-10">
          <span class="inline-block text-2xl font-bold uppercase tracking-[0.06em] text-[var(--color-primary)] mb-4">
            {contact.label}
          </span>
          <h2 class="text-[24px] font-semibold tracking-[-0.01em] text-slate-900 mb-5 leading-[1.3] max-md:text-[20px]">
            {contact.title}
          </h2>
          <p class="text-[17px] text-[var(--color-text-muted)] leading-[1.7]">
            {contact.description}
          </p>
        </div>

        <div class="flex flex-col gap-5">
          {contact.contactCards.map((card) => (
            <div class="flex gap-4 p-6 bg-white rounded-[var(--radius-md)] border border-[var(--color-border)]">
              <div class="w-12 h-12 bg-[rgba(8,145,178,0.1)] rounded-[var(--radius-md)] flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-[var(--color-primary)]">
                  {card.iconName === "envelope" && (
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                  )}
                  {card.iconName === "phone" && (
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
                  )}
                  {card.iconName === "map-pin" && (
                    <>
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                    </>
                  )}
                </svg>
              </div>
              <div>
                <h4 class="text-[15px] font-semibold mb-1">{card.title}</h4>
                <p class="text-sm text-[var(--color-text-muted)]">{card.value}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <div class="bg-white rounded-[var(--radius-xl)] p-12 border border-[var(--color-border)] shadow-lg">
        <form>
          <div class="grid grid-cols-2 gap-5 mb-5 max-md:grid-cols-1">
            <div>
              <label class="block text-sm font-medium mb-2 text-slate-900">Your Name *</label>
              <input type="text" placeholder="John Smith" required class="w-full px-4 py-[14px] border border-[var(--color-border)] rounded-sm font-sans text-[15px] transition-all duration-200 bg-white focus:outline-none focus:border-[var(--color-primary)] focus:shadow-[0_0_0_3px_rgba(8,145,178,0.1)]" />
            </div>
            <div>
              <label class="block text-sm font-medium mb-2 text-slate-900">Company Name</label>
              <input type="text" placeholder="Your Company" class="w-full px-4 py-[14px] border border-[var(--color-border)] rounded-sm font-sans text-[15px] transition-all duration-200 bg-white focus:outline-none focus:border-[var(--color-primary)] focus:shadow-[0_0_0_3px_rgba(8,145,178,0.1)]" />
            </div>
          </div>

          <div class="grid grid-cols-2 gap-5 mb-5 max-md:grid-cols-1">
            <div>
              <label class="block text-sm font-medium mb-2 text-slate-900">Email *</label>
              <input type="email" placeholder="john@company.com" required class="w-full px-4 py-[14px] border border-[var(--color-border)] rounded-sm font-sans text-[15px] transition-all duration-200 bg-white focus:outline-none focus:border-[var(--color-primary)] focus:shadow-[0_0_0_3px_rgba(8,145,178,0.1)]" />
            </div>
            <div>
              <label class="block text-sm font-medium mb-2 text-slate-900">Phone</label>
              <input type="tel" placeholder="+1 (555) 000-0000" class="w-full px-4 py-[14px] border border-[var(--color-border)] rounded-sm font-sans text-[15px] transition-all duration-200 bg-white focus:outline-none focus:border-[var(--color-primary)] focus:shadow-[0_0_0_3px_rgba(8,145,178,0.1)]" />
            </div>
          </div>

          <div class="mb-5">
            <label class="block text-sm font-medium mb-2 text-slate-900">Message *</label>
            <textarea placeholder="Tell us about your requirements..." required class="w-full px-4 py-[14px] border border-[var(--color-border)] rounded-sm font-sans text-[15px] transition-all duration-200 bg-white min-h-[140px] resize-vertical focus:outline-none focus:border-[var(--color-primary)] focus:shadow-[0_0_0_3px_rgba(8,145,178,0.1)]"></textarea>
          </div>

          <button type="submit" class="w-full px-6 py-3 font-sans text-sm font-semibold rounded-sm transition-all duration-200 cursor-pointer border-none inline-flex items-center justify-center gap-2 bg-[var(--color-primary)] text-white hover:bg-[var(--color-primary-dark)] hover:-translate-y-px hover:shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-[18px] h-[18px]">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
            </svg>
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
