---
interface Props {
  name: string;
  description: string;
  badgeImage?: string;
}

const { name, description, badgeImage } = Astro.props;
---

<div class="bg-white rounded-[var(--radius-lg)] p-8 text-center border border-[var(--color-border)] transition-all duration-300 cursor-pointer hover:shadow-lg hover:border-[rgba(76,168,71,0.3)] hover:-translate-y-0.5">
  <div class="w-[88px] h-[88px] mx-auto mb-5 flex items-center justify-center">
    {badgeImage ? (
      <img src={badgeImage} alt={name} class="w-full h-full object-contain" />
    ) : (
      <div class="w-[72px] h-[72px] flex items-center justify-center bg-[rgba(76,168,71,0.08)] rounded-full border-2 border-[rgba(76,168,71,0.2)]">
        <span class="text-[var(--color-primary)] font-bold text-sm">{name}</span>
      </div>
    )}
  </div>
  <h4 class="text-lg font-bold mb-[6px] text-slate-900">{name}</h4>
  <p class="text-[13px] text-[var(--color-text-light)]">{description}</p>
</div>
