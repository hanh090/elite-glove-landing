---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  badge: string;
  title: string;
  subtitle: string;
  features: Array<{ text: string }>;
  image: ImageMetadata;
  badgeColor?: string;
}

const { badge, title, subtitle, features, image, badgeColor = "var(--color-primary)" } = Astro.props;
---

<div class="bg-white rounded-[var(--radius-lg)] overflow-hidden border border-[var(--color-border)] transition-all duration-300 cursor-pointer hover:shadow-xl hover:-translate-y-1 hover:border-transparent">
  <div class="h-[300px] overflow-hidden relative">
    <Image
      src={image}
      alt={`${title} - ${subtitle}`}
      width={600}
      height={300}
      class="w-full h-full object-cover"
      format="webp"
    />
    <span
      class="absolute top-4 left-4 text-white px-3 py-[6px] rounded-full text-[11px] font-semibold uppercase tracking-[0.05em]"
      style={`background: ${badgeColor}`}
    >
      {badge}
    </span>
  </div>

  <div class="p-7">
    <h3 class="text-xl font-semibold mb-2 tracking-[-0.01em]">{title}</h3>
    <p class="text-sm text-[var(--color-text-light)] mb-5">{subtitle}</p>

    <ul class="list-none mb-6">
      {features.map((feature) => (
        <li class="flex items-center gap-3 text-sm text-[var(--color-text-muted)] py-[10px] border-b border-[var(--color-border)] last:border-b-0">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-[18px] h-[18px] text-[var(--color-primary)] flex-shrink-0">
            <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
          </svg>
          {feature.text}
        </li>
      ))}
    </ul>

    <button class="w-full px-6 py-3 font-sans text-sm font-semibold rounded-sm transition-all duration-200 cursor-pointer border-none inline-flex items-center justify-center gap-2 bg-[var(--color-primary)] text-white hover:bg-[var(--color-primary-dark)] hover:-translate-y-px hover:shadow-lg">
      Get Quote
    </button>
  </div>
</div>
