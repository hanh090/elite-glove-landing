---
import '../styles/global.css';
import AgentationDevToolbar from '../components/dev/agentation-dev-toolbar-react';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Elite Glove - Premium Nitrile Gloves Manufacturer',
  description = 'World-leading nitrile gloves manufacturer. ISO certified, FDA approved. Trusted by medical professionals and industries globally.'
} = Astro.props;

const showToolbar = import.meta.env.DEV || import.meta.env.PREVIEW;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/png" href="/favicon.png">
</head>
<body>
  <slot />
  {showToolbar && <AgentationDevToolbar client:only="react" />}
</body>
</html>
